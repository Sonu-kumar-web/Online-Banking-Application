<link rel="stylesheet" href="/css/header.css" />

<header class="header-detail">
   <nav>
      <div class="right">
         <ul>
            <% if (locals.user){ %>

            <div>
               <li>
                  <a href="/users/sign-out">Sign Out</a>
               </li>
               <li>
                  <a href="/users/profile/"><%= user.name %></a>
               </li>
            </div>
            <% }else{ %>

            <div>
               <li>
                  <a href="/users/sign-up">Sign Up</a>
               </li>
               <li>
                  <a href="/users/sign-in">Sign In</a>
               </li>
            </div>

            <% } %>
         </ul>
      </div>
   </nav>
</header>
