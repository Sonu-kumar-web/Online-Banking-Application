<link rel="stylesheet" href="/css/home.css" />

<div class="home">
   <h1><%= message %></h1>
</div>

<div class="sign-in">

   <h1>Sign In</h1>

   <form action="/users/create-session" method="POST">
      <input
         type="email"
         name="email"
         placeholder="Email"
         required
         class="input"
      />
      <input
         type="password"
         name="password"
         placeholder="Password"
         required
         class="input"
      />
      <input type="Submit" value="Sign In" class="submit" />
   </form>
</div>
